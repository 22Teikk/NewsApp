<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".News.UI.NewsActivity">


    <FrameLayout
        android:id="@+id/flFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <fragment
            class="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:flow_horizontalBias="0.5"
            android:id="@+id/newNavHosFragment"
            app:defaultNavHost="true"
            app:navGraph="@navigation/nav_news"/>
    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomNavigationNews"
        app:labelVisibilityMode="unlabeled"
        android:background="@drawable/bottom_nav_rounded"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_bottom_nav_news"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="20dp"
        app:itemIconSize="30dp"
        android:elevation="2dp"
        style="@style/Widget.MaterialComponents.BottomNavigationView.PrimarySurface"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"/>

</androidx.constraintlayout.widget.ConstraintLayout>